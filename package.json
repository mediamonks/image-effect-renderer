{
  "name": "@mediamonks/image-effect-renderer",
  "version": "4.0.0",
  "description": "The image-effect-renderer is a lightweight package for running fragment shaders on websites using WebGL. Apply effects to HTML image or video sources. Zero dependencies.",
  "keywords": [
    "fragment shader",
    "webgl",
    "image",
    "video",
    "effect",
    "shadertoy",
    "glsl",
    "shader",
    "oneshader",
    "react"
  ],
  "repository": "git@github.com:mediamonks/image-effect-renderer.git",
  "author": "Reinder Nijhoff <reinder@mediamonks.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/image-effect-renderer.umd.cjs",
  "module": "./dist/image-effect-renderer.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/image-effect-renderer.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/image-effect-renderer-react.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:ts",
    "build:ts": "vite build",
    "clean": "shx rm -rf dist node_modules/.cache/.tsbuildinfo",
    "typecheck": "tsc --project tsconfig.json --noEmit --noUnusedLocals",
    "prepare-publish": "tsx ./scripts/preparePublish.ts"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/shelljs": "^0.8.14",
    "react": "^19.2.0",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "tsx": "^4.6.2",
    "typescript": "^5.0.4",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.2.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
